<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp">

    <Button
            android:id="@+id/bShowLogins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Show first 10 logins" />

    <TextView
            android:id="@+id/tvUserLogins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bShowLogins"
            android:layout_alignStart="@+id/bShowLogins"
            android:layout_alignEnd="@+id/bShowLogins"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Hello world!" />

    <Button
            android:id="@+id/bOpenUserList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Open user list" />

</RelativeLayout>